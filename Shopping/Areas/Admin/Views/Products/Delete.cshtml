@model Shopping.Models.ProductModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3>Xóa sản phẩm</h3>

<form asp-controller="Products" asp-action="Delete" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Thông tin sản phẩm</h4>

                <table class="table table-hover">


                    <tbody>

                        <tr>
                            <th>Id</th>
                            <td>@Model.Id</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <th>Category</th>
                            <td>@Model.Category.Name</td>
                        </tr>

                        <tr>
                            <th>Brand</th>
                            <td>@Model.Brand.Name</td>
                        </tr>
                        <tr>
                            <th>Price</th>
                            <td>@Model.Price</td>
                        </tr>
                        
                        <tr>
                            <th>Active</th>
                            <td>
                                @if (@Model.Active)
                                {
                                    <div class="switch m-r-10">
                                        <input type="checkbox" id="switch-1" checked="" disabled />
                                        <label for="switch-1"></label>
                                    </div>
                                }
                                else
                                {
                                    <div class="switch m-r-10">
                                        <input type="checkbox" id="switch-1" disabled />
                                        <label for="switch-1"></label>
                                    </div>
                                }
                            </td>
                        </tr>
                        
                       
                        
                        <tr>
                            <th>Ngày tạo</th>
                            <td>@Model.DateCreated</td>
                        </tr>

                        <tr>
                            <th>Ngày chỉnh sửa</th>
                            <td>@Model.DateModified</td>
                        </tr>
                       

                        

                        <tr>
                            <th>Ảnh đại diện</th>
                            <td>
                                <img width="200" height="200" src="~/images/products/@Model.Thumb" />
                            </td>
                        </tr>


                        <tr>
                            <th>Description</th>
                            <td>
                                @Html.Raw(Model.Description)
                                
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
            <form asp-controller="Products" asp-action="Delete" asp-route-id="@Model.Id">
                <input type="hidden" asp-for="Id" />
                <div class="text-center">
                    <input type="submit" value="Xác nhận xóa" class="btn btn-danger cod-md-6" />

                </div>                
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</form>