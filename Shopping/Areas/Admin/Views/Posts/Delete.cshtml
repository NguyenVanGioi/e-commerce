@model Shopping.Models.PostModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3>Xóa bài viết</h3>

<form asp-controller="Posts" asp-action="Delete" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Thông tin bài viết</h4>

                <table class="table table-hover">


                    <tbody>

                        <tr>
                            <th>Id</th>
                            <td>@Model.Id</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>@Model.Title</td>
                        </tr>
                        <tr>
                            <th>Contents</th>
                            <td>
                                @Html.Raw(Model.Contents)

                            </td>
                        </tr>
                        <tr>
                            <th>Ảnh đại diện</th>
                            <td>
                                <img width="200" height="200" src="~/images/posts/@Model.Thumb" />
                            </td>
                        </tr>

                        <tr>
                            <th>Ngày tạo</th>
                            <td>@Model.DateCreated</td>
                        </tr>

                       

                        <tr>
                            <th>Trạng thái</th>
                            <td>
                                @if (@Model.Published)
                                {
                                    <div class="switch m-r-10">
                                        <input type="checkbox" id="switch-1" checked="" disabled />
                                        <label for="switch-1"></label>
                                    </div>
                                }
                                else
                                {
                                    <div class="switch m-r-10">
                                        <input type="checkbox" id="switch-1" disabled />
                                        <label for="switch-1"></label>
                                    </div>
                                }
                            </td>
                        </tr>


                        
                    </tbody>
                </table>

            </div>
            <form asp-controller="Posts" asp-action="Delete" asp-route-id="@Model.Id">
                <input type="hidden" asp-for="Id" />
                <div class="text-center">
                    <input type="submit" value="Xác nhận xóa" class="btn btn-danger cod-md-6" />

                </div>
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</form>