@model List<Shopping.Models.ProductModel>


@{
    ViewData["Title"] = "Home Page";
}

<partial name="_Notifycation" />

<!-- Header Section End -->
<!-- Hero Section Begin -->
<section class="hero">

    <div class="container">
        <div class="row">
            @Html.Partial("_SidebarPatial")
        </div>

    </div>

</section>
<!-- Hero Section End -->
<!-- Categories Section Begin -->
<!-- Categories Section End -->
<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
               
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic">
                            <a asp-area="" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">
                                <img src="~/images/products/@item.Thumb" />

                            </a>
                            <ul class="featured__item__pic__hover">
                                @* <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li> *@
                                <li><a asp-action="Add" asp-controller="Cart" asp-route-Id="@item.Id"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h5>@item.Name</h5>
                            <h6>Giá: @item.Price.Value.ToString("#,##0") VND</h6>
                            <h6>Danh mục: @item.Category.Name</h6>
                            <h6>Thương hiệu: @item.Brand.Name</h6>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Featured Section End -->

