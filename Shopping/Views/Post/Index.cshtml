@model List<Shopping.Models.PostModel>

@{
    ViewData["Title"] = "Danh sách tin tức" + ViewBag.CurrentPage;
    Layout = "~/Views/Shared/_Layout.cshtml";

}


    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <img src="~/User_Assets/img/banner/banner-1.jpg" style="width: 1200px; height:400px" />

            </div>
        </div>
    </div>




<section class="blog spad">
    <div class="container">
        <div class="row">
            

            <div class="col-lg-12 col-md-12 justify-content-center" style="min-height: 1200px;">
                <h4 style="text-align: center; font-weight:bold;">TIN NỔI BẬT</h4>
                <br />
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="blog__item">
                                <div class="blog__item__pic">
                                    <img src="~/images/posts/@item.Thumb" height="200" alt="">
                                </div>
                                <div class="blog__item__text">
                                    <ul>
                                        <li><i class="fa fa-calendar-o"></i>@item.DateCreated.Value.ToShortDateString()</li>
                                    </ul>
                                    <h5><a asp-area="" asp-controller="Post" asp-action="Details" asp-route-id="@item.Id">@item.Title</a></h5>
                                    <p>
                                        @item.Title
                                    </p>
                                    <a asp-area="" asp-controller="Post" asp-action="Details" asp-route-id="@item.Id" class="blog__btn">READ MORE <span class="arrow_right"></span></a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            

        </div>
    </div>
</section>
<style>
    .breadcrumb-section img {
        padding-left: 200px;
        padding-right: 200px;
        box-sizing: border-box; /* Đảm bảo rằng padding không làm tăng kích thước thực sự của hình ảnh */
    }

    

</style>




