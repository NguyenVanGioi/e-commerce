@model IEnumerable<CategoryModel>

    <div class="hero__categories" tabindex="0">
        <div class="hero__categories__all">
            <span>Danh mục</span>
        </div>
        <ul>
            @foreach (var item in Model)
            {
                <li><a asp-action="Index" asp-controller="Category" asp-area="" asp-route-Alias="@item.Alias">@item.Name</a></li>

            }
            
        </ul>
    </div>
